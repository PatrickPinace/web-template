---
const base = import.meta.env.BASE_URL;

const navItems = [
  { name: 'Start', href: base },
  { name: 'O mnie', href: `${base}#o-mnie` },
  { name: 'Usługi', href: `${base}#uslugi` },
  { name: 'Cennik', href: `${base}cennik` },
  { name: 'Artykuły', href: `${base}blog` },
  // { name: 'Aktualności', href: `${base}aktualnosci` },
  { name: 'Kontakt', href: `${base}#kontakt` },
];
---

<nav class="bg-white shadow-md fixed w-full top-0 z-50">
  <div class="container mx-auto px-4 py-4">
    <div class="flex justify-between items-center">
      <a href={base} class="flex items-center gap-3 text-2xl font-bold text-blue-600">
        <img src={`${base}logo.png`} alt="Logo" class="h-20 w-auto" />
        Justyna Serafin
      </a>

      <!-- Desktop Navigation -->
      <ul class="hidden md:flex space-x-8">
        {navItems.map((item) => (
          <li>
            <a
              href={item.href}
              class="text-gray-700 hover:text-blue-600 transition-colors duration-300"
            >
              {item.name}
            </a>
          </li>
        ))}
      </ul>

      <!-- Mobile Menu Button -->
      <button
        id="mobile-menu-button"
        class="md:hidden text-gray-700 focus:outline-none"
        aria-label="Menu"
      >
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
        </svg>
      </button>
    </div>

    <!-- Mobile Navigation -->
    <div id="mobile-menu" class="hidden md:hidden mt-4 pb-4">
      <ul class="space-y-3">
        {navItems.map((item) => (
          <li>
            <a
              href={item.href}
              class="block text-gray-700 hover:text-blue-600 transition-colors duration-300"
            >
              {item.name}
            </a>
          </li>
        ))}
      </ul>
    </div>
  </div>
</nav>

<script>
  const mobileMenuButton = document.getElementById('mobile-menu-button');
  const mobileMenu = document.getElementById('mobile-menu');

  mobileMenuButton?.addEventListener('click', () => {
    mobileMenu?.classList.toggle('hidden');
  });
</script>
