---
import Layout from '../layouts/Layout.astro';
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';

const base = import.meta.env.BASE_URL;

const pricing = [
  {
    category: 'Konsultacja i diagnostyka',
    items: [
      { name: 'Konsultacja ortodontyczna', price: '200 zł' },
      { name: 'Diagnostyka (skany, fotografie diagnostyczne)', price: '400 zł' },
      { name: 'Przygotowanie planu leczenia z analizą cefalometryczną', price: '150 zł' },
    ]
  },
  {
    category: 'Aparaty ruchome',
    items: [
      { name: 'Aparat ruchomy', price: 'od 1000 zł' },
      { name: 'Twin block', price: '1800 zł' },
      { name: 'Hyrax', price: '1900 zł' },
      { name: 'Marco Rosa', price: '2000 zł' },
      { name: 'Maska twarzowa', price: '500 zł' },
    ]
  },
  {
    category: 'Aparaty stałe',
    items: [
      { name: 'Aparat stały samoligaturujący 1 łuk', price: '3000 zł' },
    ]
  },
  {
    category: 'Wizyty kontrolne',
    items: [
      { name: 'Wizyta kontrolna - aparat ruchomy', price: '150 zł' },
      { name: 'Wizyta kontrolna - aparat stały 1 łuk', price: '250 zł' },
      { name: 'Wizyta kontrolna - aparat stały 2 łuki', price: '300 zł' },
    ]
  },
  {
    category: 'Zakończenie leczenia',
    items: [
      { name: 'Demontaż aparatu wraz z aparatami retencyjnymi', price: '1200 zł' },
    ]
  },
  {
    category: 'Alignery',
    items: [
      { name: 'Alignery - aparaty nakładkowe', price: 'Wycena indywidualna' },
    ]
  },
];
---

<Layout title="Cennik - Justyna Serafin Ortodonta">
  <Navigation />

  <main class="pt-24 pb-16 min-h-screen bg-gray-50">
    <div class="container mx-auto px-4 py-12">
      <div class="max-w-4xl mx-auto">
        <h1 class="text-5xl font-bold text-center mb-6 text-gray-900">Cennik</h1>
        <p class="text-center text-gray-600 mb-12 text-lg">
          Przejrzyste ceny usług ortodontycznych
        </p>

        <div class="space-y-8">
          {pricing.map((section) => (
            <div class="bg-white rounded-xl shadow-lg overflow-hidden">
              <div class="bg-gradient-to-r from-blue-600 to-indigo-600 px-6 py-4">
                <h2 class="text-2xl font-bold text-white">{section.category}</h2>
              </div>
              <div class="p-6">
                <ul class="space-y-4">
                  {section.items.map((item) => (
                    <li class="flex justify-between items-center pb-4 border-b border-gray-200 last:border-0 last:pb-0">
                      <span class="text-gray-700 text-lg">{item.name}</span>
                      <span class="text-blue-600 font-bold text-lg">{item.price}</span>
                    </li>
                  ))}
                </ul>
              </div>
            </div>
          ))}
        </div>

        <div class="mt-12 bg-blue-50 border-l-4 border-blue-600 p-6 rounded-r-xl">
          <h3 class="text-xl font-bold text-gray-900 mb-3">Informacje dodatkowe</h3>
          <ul class="space-y-2 text-gray-700">
            <li>• Ceny podane są w złotych polskich (PLN)</li>
            <li>• Pierwsza konsultacja ortodontyczna pozwala na ocenę sytuacji i zaproponowanie planu leczenia</li>
            <li>• Wizyty kontrolne są niezbędne do monitorowania postępów leczenia</li>
            <li>• Cena alignerów ustalana jest indywidualnie po konsultacji i diagnostyce</li>
          </ul>
        </div>

        <div class="mt-12 text-center">
          <a href={`${base}#kontakt`} class="inline-block bg-blue-600 text-white px-10 py-4 rounded-lg hover:bg-blue-700 transition-colors duration-300 text-lg font-semibold">
            Umów konsultację
          </a>
        </div>
      </div>
    </div>
  </main>

  <Footer />
</Layout>
