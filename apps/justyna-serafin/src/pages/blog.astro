---
import Layout from '../layouts/Layout.astro';
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';

// Przykładowe posty blogowe
const blogPosts = [
  {
    id: 1,
    title: 'Kiedy zacząć leczenie ortodontyczne u dziecka?',
    excerpt: 'Dowiedz się, jaki jest najlepszy moment na rozpoczęcie leczenia ortodontycznego u najmłodszych pacjentów.',
    date: '2026-01-15',
    category: 'Ortodoncja dziecięca',
    image: 'placeholder'
  },
  {
    id: 2,
    title: 'Aparaty stałe czy alignery - co wybrać?',
    excerpt: 'Porównanie tradycyjnych aparatów stałych z nowoczesnymi alignerami i pomoc w wyborze najlepszej opcji.',
    date: '2026-01-10',
    category: 'Leczenie ortodontyczne',
    image: 'placeholder'
  },
  {
    id: 3,
    title: 'Jak dbać o higienę podczas noszenia aparatu ortodontycznego?',
    excerpt: 'Praktyczne wskazówki dotyczące utrzymania właściwej higieny jamy ustnej w trakcie leczenia ortodontycznego.',
    date: '2026-01-05',
    category: 'Porady',
    image: 'placeholder'
  },
];
---

<Layout title="Blog - Justyna Serafin Ortodonta" description="Artykuły i porady dotyczące ortodoncji">
  <Navigation />

  <main class="pt-24 pb-16 min-h-screen bg-gray-50">
    <div class="container mx-auto px-4 py-12">
      <div class="max-w-6xl mx-auto">
        <h1 class="text-5xl font-bold text-center mb-6 text-gray-900">Blog</h1>
        <p class="text-center text-gray-600 mb-12 text-lg">
          Artykuły i porady z zakresu ortodoncji
        </p>

        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
          {blogPosts.map((post) => (
            <article class="bg-white rounded-xl shadow-lg overflow-hidden hover:shadow-2xl transition-shadow duration-300">
              <div class="h-48 bg-gradient-to-br from-blue-200 to-indigo-300 flex items-center justify-center">
                <svg class="w-20 h-20 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                </svg>
              </div>
              <div class="p-6">
                <div class="flex items-center justify-between mb-3">
                  <span class="text-sm text-blue-600 font-semibold">{post.category}</span>
                  <time class="text-sm text-gray-500">{new Date(post.date).toLocaleDateString('pl-PL')}</time>
                </div>
                <h2 class="text-xl font-bold text-gray-900 mb-3 hover:text-blue-600 transition-colors">
                  <a href={`/blog/${post.id}`}>{post.title}</a>
                </h2>
                <p class="text-gray-600 mb-4">{post.excerpt}</p>
                <a href={`/blog/${post.id}`} class="text-blue-600 font-semibold hover:text-blue-800 transition-colors">
                  Czytaj więcej →
                </a>
              </div>
            </article>
          ))}
        </div>

        <div class="mt-16 text-center bg-blue-50 rounded-xl p-8">
          <h2 class="text-2xl font-bold text-gray-900 mb-4">Zostań na bieżąco</h2>
          <p class="text-gray-600 mb-6">
            Regularnie publikuję nowe artykuły i porady dotyczące ortodoncji
          </p>
          <p class="text-gray-500 text-sm">
            Wkrótce będzie możliwość zapisu do newslettera
          </p>
        </div>
      </div>
    </div>
  </main>

  <Footer />
</Layout>
