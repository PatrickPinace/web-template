---

<!-- Sidebar Navigation -->
<aside class="fixed left-0 top-0 h-screen w-64 bg-white/70 backdrop-blur-xl border-r border-neutral-200/50 z-50 hidden lg:block">
  <div class="p-8">
    <!-- Logo/Name -->
    <div class="mb-12">
      <h1 class="text-2xl font-bold mb-1">Justyna Serafin</h1>
      <p class="text-sm text-neutral-500">Ortodonta</p>
    </div>

    <!-- Navigation Links -->
    <nav class="space-y-2">
      {navItems.map((item) => (
        <a
          href={item.href}
          class="flex items-center gap-3 px-4 py-3 rounded-lg text-neutral-700 hover:bg-neutral-100/80 hover:text-neutral-900 transition-all duration-200 group"
        >
          <svg class="w-5 h-5 text-neutral-400 group-hover:text-neutral-700 transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d={item.icon} />
          </svg>
          <span class="font-medium">{item.name}</span>
        </a>
      ))}
    </nav>
  </div>

  <!-- Footer Info in Sidebar -->
  <div class="absolute bottom-0 left-0 right-0 p-8 border-t border-neutral-200/50">
    <p class="text-xs text-neutral-500">
      Â© 2026 Justyna Serafin
    </p>
  </div>
</aside>

<!-- Mobile Menu Button -->
<button
  id="mobile-sidebar-button"
  class="lg:hidden fixed top-6 left-6 z-50 p-3 bg-white/80 backdrop-blur-md rounded-lg shadow-lg"
>
  <svg class="w-6 h-6 text-neutral-700" fill="none" stroke="currentColor" viewBox="0 0 24 24">
    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
  </svg>
</button>

<!-- Mobile Sidebar Overlay -->
<div id="mobile-sidebar" class="lg:hidden fixed inset-0 bg-black/50 backdrop-blur-sm z-40 hidden">
  <aside class="fixed left-0 top-0 h-screen w-64 bg-white shadow-2xl">
    <div class="p-8">
      <div class="flex justify-between items-center mb-12">
        <div>
          <h1 class="text-2xl font-bold mb-1">Justyna Serafin</h1>
          <p class="text-sm text-neutral-500">Ortodonta</p>
        </div>
        <button id="close-sidebar" class="p-2 hover:bg-neutral-100 rounded-lg">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
          </svg>
        </button>
      </div>

      <nav class="space-y-2">
        {navItems.map((item) => (
          <a
            href={item.href}
            class="flex items-center gap-3 px-4 py-3 rounded-lg text-neutral-700 hover:bg-neutral-100 hover:text-neutral-900 transition-all duration-200 group mobile-nav-link"
          >
            <svg class="w-5 h-5 text-neutral-400 group-hover:text-neutral-700 transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d={item.icon} />
            </svg>
            <span class="font-medium">{item.name}</span>
          </a>
        ))}
      </nav>
    </div>
  </aside>
</div>

<script>
  const mobileSidebarButton = document.getElementById('mobile-sidebar-button');
  const mobileSidebar = document.getElementById('mobile-sidebar');
  const closeSidebarButton = document.getElementById('close-sidebar');
  const mobileNavLinks = document.querySelectorAll('.mobile-nav-link');

  mobileSidebarButton?.addEventListener('click', () => {
    mobileSidebar?.classList.remove('hidden');
  });

  closeSidebarButton?.addEventListener('click', () => {
    mobileSidebar?.classList.add('hidden');
  });

  mobileSidebar?.addEventListener('click', (e) => {
    if (e.target === mobileSidebar) {
      mobileSidebar.classList.add('hidden');
    }
  });

  mobileNavLinks.forEach(link => {
    link.addEventListener('click', () => {
      mobileSidebar?.classList.add('hidden');
    });
  });
</script>
