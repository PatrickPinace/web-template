  .category-section.active {
    display: block;
    animation: fadeIn 0.3s ease-in-out;
  }

  .category-link.active {
    background: rgb(245 245 245);
  }

  :global(body.dark) .category-link.active {
    background: rgba(255, 255, 255, 0.08);
  }

  .category-link.active span {
    opacity: 1;
  }

  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(10px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  /* Custom scrollbar */
  ::-webkit-scrollbar {
    width: 8px;
  }

  ::-webkit-scrollbar-track {
    background: rgba(255, 255, 255, 0.05);
  }

  ::-webkit-scrollbar-thumb {
    background: rgba(255, 255, 255, 0.2);
    border-radius: 4px;
  }

  ::-webkit-scrollbar-thumb:hover {
    background: rgba(255, 255, 255, 0.3);
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const categoryLinks = document.querySelectorAll('.category-link');
    const sections = document.querySelectorAll('.category-section');
    const themeToggle = document.getElementById('theme-toggle');
    const pricingLinks = document.querySelectorAll('.pricing-link');

    // Function to switch to a category
    function switchToCategory(categorySlug: string) {
      // Hide all sections
      sections.forEach(s => s.classList.remove('active'));

      // Show target section
      const targetSection = document.getElementById(`${categorySlug}-section`);
      if (targetSection) {
        targetSection.classList.add('active');
      }

      // Update active link
      categoryLinks.forEach(l => l.classList.remove('active'));
      const activeLink = document.querySelector(`[data-category="${categorySlug}"]`);
      if (activeLink) {
        activeLink.classList.add('active');
      }

      // Scroll to top
      window.scrollTo({ top: 0, behavior: 'smooth' });
    }

    // Category navigation
    categoryLinks.forEach(link => {
      link.addEventListener('click', (e) => {
        e.preventDefault();
        const category = link.getAttribute('data-category');
        switchToCategory(category);
      });
    });

    // Pricing link buttons
    pricingLinks.forEach(button => {
      button.addEventListener('click', () => {
        const target = button.getAttribute('data-target');
        switchToCategory(target);
      });
    });

    // Header logo click
    const headerLogo = document.getElementById('header-logo');
    headerLogo?.addEventListener('click', (e) => {
      e.preventDefault();
      switchToCategory('o-mnie');
    });

    // Theme toggle
    themeToggle?.addEventListener('click', () => {
      const body = document.body;
      const isDark = body.classList.contains('bg-[#0a0a0a]');

      if (isDark) {
        // Switch to light
        body.classList.remove('bg-[#0a0a0a]', 'text-white');
        body.classList.add('bg-white', 'text-neutral-900');
        body.classList.remove('dark');
        localStorage.setItem('theme', 'light');
      } else {
        // Switch to dark
        body.classList.remove('bg-white', 'text-neutral-900');
        body.classList.add('bg-[#0a0a0a]', 'text-white');
        body.classList.add('dark');
        localStorage.setItem('theme', 'dark');
      }
    });
  });
</script>
